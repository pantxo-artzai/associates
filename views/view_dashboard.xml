<odoo>
    <data>
        <!-- Vue kanban pour le modèle "associates.dashboard" -->
        <record id="kanban_view" model="ir.ui.view">
            <field name="name">Associates Dashboard</field>
            <field name="model">associates.dashboard</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" archivable="false" js_class="crm_kanban" create="false" sample="1">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content">
                                <div>
                                    <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                                </div>
                                <div>
                                    <span class="o_kanban_record_subtitle"><field name="description"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Définition de l'action associée au menu "Dashboard" -->
        <record id="action_dashboard_kanban" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="res_model">associates.dashboard</field>
            <field name="view_mode">kanban</field>
        </record>

        <!-- Définition du menu "Dashboard" -->
        <record id="menu_dashboard" model="ir.ui.menu">
            <field name="name">Dashboard</field>
            <field name="parent_id" ref="menu_associates_management"/>
            <field name="action" ref="action_dashboard_kanban" />
            <field name="sequence">10</field>
        </record>
    </data>
</odoo>